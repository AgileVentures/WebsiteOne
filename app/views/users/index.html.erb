<div class="container">
  <h1>All members</h1>
  <% @users.each_slice(4) do |slice| %>
      <ul id="user-container" class="media-list">
        <% slice.each do |user| %>
            <li class="media-item user-item">
              <a class="pull-left" href="#<% user.id %>" target="_blank">
                <img src="<%= gravatar_for(user.email) %>" class="thumbnail img-rounded media-object">
              </a>
              <div class="media-body">
                <h4 class="media-heading"><a href="#<% user.id %>"><%= user_display_name user %></a></h4>
              </div>
            </li>
        <% end %>
      </ul>
  <% end %>
</div>





