<div id="all_members" class="container">
  <h1>All members</h1>
  <% @users.each_slice(4) do |slice| %>
      <ul id="user-container" class="media-list">
        <% slice.each do |user| %>
            <li class="media-item user-item">
              <a class="pull-left" id="<%= "avatar-#{user.id}" %>" href="<%= users_show_path user %>">
                <img id="avatar" src="<%= gravatar_for(user.email) %>" class="thumbnail img-rounded media-object">
              </a>
              <div class="media-body">
                <h4 class="media-heading"><a href="<%= users_show_path user %>"><%= user.display_name %></a></h4>
              </div>
            </li>
        <% end %>
      </ul>
  <% end %>
</div>





