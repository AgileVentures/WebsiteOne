<% provide :title, 'Members' %>

<div id="all_members">
  <h1>All members</h1>
  <% @users.each_slice(3) do |slice| %>
      <ul id="user-container" class="media-list">
        <% slice.each do |user| %>
            <li class="media-item user-item">
              <a class="pull-left" id="<%= "avatar-#{user.id}" %>" href="<%= user_path user %>">
                <img id="avatar" src="<%= gravatar_for(user.email) %>" class="thumbnail img-rounded media-object">
              </a>

              <div class="media-body">
                <h4 class="media-heading"><a href="<%= user_path user %>"><%= user.display_name %></a></h4>

                <p style="margin-left: 8px;"><%= user.country if user.country.present? %></p>
              </div>
            </li>
        <% end %>
      </ul>
  <% end %>
</div>
