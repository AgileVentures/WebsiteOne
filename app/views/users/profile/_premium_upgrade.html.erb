<% if presenter.user_same_as?(current_user) %>
  <% data_label = 'Upgrade to Premium' %>
<% else %>
  <% data_label = 'Sponsor for Premium' %>
<% end %>

<%= form_tag subscriptions_path(plan: 'premium', user: presenter.user) do %>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="A month's subscription"
            data-amount="1000"
            data-currency="GBP"
            data-locale="en-US"
            data-name="Premium Membership"
            data-label="<%= data_label %>"></script>

<% end %>