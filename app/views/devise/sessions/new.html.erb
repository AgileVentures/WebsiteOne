<div class="container">
<div class="col-md-5 col-md-offset-2">
  <h1 class="text-center"> Log In  </h1>
  <div class="row">
    <% supported_third_parties.each do |provider| %>
        <div class="col-xs-6 col-sm-6 col-md-6">
        <%= social_button provider, url: session[:previous_url], extra_class: 'btn-lg' %>
        </div>
    <% end %>
  </div>
  <h4 class="text-center">Don't have an account? <%= link_to 'Sign up', new_registration_path(resource_name) %></h4>
  <h4 class="text-center"><%= link_to "Forgot your password?", new_password_path(resource_name) %></h4>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <fieldset>
        <div class='form-group'>
          <%= f.email_field :email, autofocus: true, placeholder: 'Enter email', class: 'form-control input-lg' %>
        </div>
        <div class='form-group'>
          <%= f.password_field :password, placeholder: 'Enter password', class: 'form-control input-lg' %>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class='form-group' style="display:inline-flex;">
              <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'custom-label', :style => 'margin-left: 5px;'%>
            </div>
        <% end -%>
        <div class='form-group'>
          <%= f.submit 'Sign in', class: 'btn btn-primary btn-lg btn-block' %>
        </div>
        <%= devise_error_simple_message %>
      </fieldset>
  <% end %>
</div>
</div>
