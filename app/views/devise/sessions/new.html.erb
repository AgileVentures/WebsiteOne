<div class="col-md-4 col-md-offset-4" style="margin-top: -80px;  padding-left: 140px; padding-right: 60px">
  <h1 class="text-center"> Log In  </h1>
  <div class="row">
    <% supported_third_parties.each do |provider| %>
        <div class="col-xs-6 col-sm-6 col-md-6">
        <%= social_button provider %>
        </div>
    <% end %>
  </div>
  <h4 class="text-center">Don't have an account? <%= link_to 'Sign up', new_registration_path(resource_name) %></h4>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <fieldset>
        <div class='form-group'>
          <%= f.email_field :email, autofocus: true, placeholder: 'Enter email', class: 'form-control input-lg' %>
        </div>
        <div class='form-group'>
          <%= f.password_field :password, placeholder: 'Enter password', class: 'form-control input-lg' %>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class='form-group'>
              <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'custom-label' %>
            </div>
        <% end -%>
        <div class='form-group'>
          <%= f.submit 'Sign in', class: 'btn btn-primary btn-lg btn-block' %>
        </div>
        <%= devise_error_simple_message %>
        <%= flash_messages layout_flash: false %>
      </fieldset>
  <% end %>


  <%# render 'devise/shared/links' %>
</div>
