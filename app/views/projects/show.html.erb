<% provide :title, @project.title %>
<div class="project-title">
  <div class="row">
    <div class="col-xs-12">
      <strong><%= link_to 'Projects', projects_path %></strong> <i class="fa fa-angle-double-right"></i>
      <strong><%= @project.title %></strong>
      <h1><%= @project.title %></h1>
      <p><%= clean_html @project.description %></p>
      <hr>

      <div class="project-edit">
      <% if user_signed_in? %>
        <% if current_user.following?(@project) %>
        <ul class="list-inline">
          <li class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="actions-dropdown" data-toggle="dropdown">
              Project Actions
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="actions-dropdown">
              <li role="presentation"><%= link_to "Edit Pitch", '/editor'+ request.path, role: 'menuitem', id: 'edit_link', data: { save_url: mercury_update_project_path(@project.id) } %></li>
	      <li role="presentation"><a role="menuitem" tabindex="-1" href="<%= edit_project_path(@project) %>">Edit Project Details</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="<%= new_project_document_path(project_id: @project.friendly_id) %>">Create new document</a></li>
              <li role="presentation" class="divider"></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="<%= unfollow_project_path(@project) %>">Leave Project</a></li>
            </ul>
          </li>
          <li class="hangout-btn">
            <%= render partial: 'hangouts/hangout_button', locals: {hangout_id: '', event_id: '', category: 'PairProgramming', project_id: @project.id, title: "PairProgramming on #{@project.title}"} %>
          </li>
        </ul>
        <hr>
        <% end %>
      <% end %>
      </div>

    </div>
  </div>
</div>

<div class="project-main">
  <div class="row">

    <div class="project-sidebar col-xs-12 col-md-4 col-md-push-8" role="complementary">
      <%= render 'highlight_box', members: @members %>
      <%= render 'connections' %>
      <%= render 'members_list', members: @members %>
    </div>

    <div class="project-main col-xs-12 col-md-8 col-md-pull-4">
      <ul class="nav nav-tabs nav-justified">
        <li id="pitch" class="active">
          <a href="#pitch_content" data-toggle="tab" data-hash="home">Home</a>
        </li>
        <li id="documents">
          <a href="#documents_list" data-toggle="tab" data-hash="document">Documents (<%= @documents.roots.count %>)</a>
        </li>
        <li id="videos">
          <a href="#videos_list" data-toggle="tab" data-hash="video">Videos (<%= @videos.count %>)</a>
        </li>
        <li id="activities">
          <a href="#activities_list" data-toggle="tab" data-hash="activity">Activity (<%= @stories.count %>)</a>
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content" style="background: #fff;">
        <div class="tab-pane active">
	  <div id="pitch_content" class="mercury-region" data-mercury="full" contenteditable="true">
            <% unless @project.pitch.nil? %>
              <%= @project.pitch.html_safe %>
            <% else %>
              <p><b>Project content missing :(</b></p>
              <p>A compelling pitch can make your project <a href="https://www.kickstarter.com/discover/categories/technology?ref=discover_index">more appealing</a> to potential collaborators. Please edit project details to add pitch content.</p>
            <% end %>
	  </div>
        </div>
        <div class="tab-pane" id="documents_list">
          <%= render 'documents_list' %>
        </div>
        <div class="tab-pane" id="videos_list">
          <%= render 'videos_list' %>
        </div>
        <div class="tab-pane activity" id="activities_list">
          <%= render 'activity' %>
        </div>
      </div>
    </div>
  </div>
</div>
