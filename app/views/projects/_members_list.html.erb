<ul class="listings">
  <% if members.empty? %>
    <p style="margin-top: 20px;">No members in project <strong><%= @project.title %></strong></p>
  <% else %>
    <h2>Project Members</h2>
    <% members.each do |member| %>
      <% present member do |presenter| %>
        <li class="members-list-item">
          <a href="<%= user_path(member) %>" data-toggle="tooltip"
            data-placement="top" title="<%= presenter.display_name %>">
            <img src="<%= presenter.gravatar_src %>" class="projects-user-avatar">
          </a>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
