<div class='row'>
  <div class='col-sm-6'>
    <%= form_for @project, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
        <div class='form-group'>
          <%= f.label :title %>
          <%= f.text_field :title, :class => 'form-control', placeholder: 'Name' %>
        </div>
        <div class='form-group'>
          <%= f.label :description %>
          <%= f.text_area :description, :class => 'form-control',  'rows' => 10, placeholder: 'Description'%>
        </div>
        <div class='form-group'>
          <%= f.label :status %>
          <%= f.select :status, ['Active', 'Closed', 'Pending'], {}, :class => 'form-control input-lg' %>
        </div>
        <div class='form-group'>
          <%= link_to 'Back', projects_path, :type => 'button', :class => 'btn btn-default'%>
          <%= f.submit 'Submit', :class => 'btn btn-default' %>
        </div>
    <% end %>
  </div>
</div>


