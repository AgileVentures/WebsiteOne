<% if event.present? %>
  <p>
    <%= link_to event['name'], event_path(event['id']) %>
    <% if event.next_occurrence_time.to_datetime < Time.now %>
      is live!
      <%= link_to 'Click to join!', event.hangout.hangout_url if event.hangout.try!(:live?) %>
    <% else %>
      in <%= display_countdown(event) %>
  <% end %>
  </p>
<% end %>
