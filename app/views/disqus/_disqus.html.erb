<% if Features.enabled?(:disqus) %>
  <%= get_disqus_sso(current_user) if user_signed_in?%>

  <div id="disqus_thread"
  data-disqus-shortname='<%= Settings.disqus.shortname %>' 
  data-disqus-identifier='<%= entity.friendly_id %>' 
  data-disqus-title='<%= entity.title %>' 
  data-disqus-url='<%= request.url %>'></div>

  <%= javascript_include_tag 'disqus' %>

  <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
<% end %>
