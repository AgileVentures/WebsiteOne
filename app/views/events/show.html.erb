<% url = @event.url if @event.url %>
<script src="https://apis.google.com/js/platform.js"></script>

<div class="col-lg-8 col-lg-offset-2">

  <h2><%= @event.name %></h2>
  <small><%= @event.schedule %></small>
  <p><strong><%= @event.description %></strong></p>

  <% if @event.schedule.present? %>
    <div class="row well well-sm" >
    <div class="col-lg-8" style="margin-top: -10px">
      <h4>Upcoming schedule</h4>
      <% @event_schedule.first(5).each do |e| %>
        <%= current_occurrence_time(e) %>
      <br/>
    <% end %>
    </div>
    <div class="col-sm-4" style="margin-top: 10px">
      <%= link_to 'Back', root_path, :class => 'btn btn-default' %>
      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_event_path(@event), :class => 'btn btn-default' %>
      <div style="margin-top: 10px">
        <%= render partial: 'shared/hangouts',
          locals: {
            id: @event.id,
            topic: @event.name + ' - ' + current_occurrence_time(@event_schedule.first(1))
                   } %>
      </div>
    <% end %>
    </div>
  </div>
<% end %>

  <div class="col-lg-12">
    <%= render partial: 'shared/hangout_status', locals: {video: @video} if @video && @video.started? %>
  </div>

</div>
