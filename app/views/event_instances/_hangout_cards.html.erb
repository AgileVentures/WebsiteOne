<% @event_instances.each_with_index do |event, index| %>
  <% present event do |hangout| %>
    <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
      <div class="card">
        <div class="box ">
          <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%=hangout.yt_video_id%>"></iframe>
          </div>
          <div class="card-block">
            <h4 class="card-title"><%= hangout.event_link %></h4>
            <div class="meta">
              <div class="row">
                <div class="col-lg-6">
                  <%= render 'users/user_avatar', user: hangout.host %>
                </div>
                <div class="col-lg-6">
                  <div> <%= link_to 'Join', hangout.hangout_url, { class: "btn-hg-join #{hangout.live? ? '' : 'disable'}" } %></div>
                  <div><%= link_to 'Watch', hangout.video_url, { class: 'btn-hg-watch' } %></div>
                </div>
              </div>
            </div>
            <div id="<%= "collapse#{index}" %>" class="card-footer collapse">
              <div class='row'><%= hangout.title %> </div>
              <div class='row'><%= hangout.category %> </div>
              <div class='row'>
                <span class="float-right"><%= hangout.created_at %></span>
                <span><%= hangout.duration %> </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% end %>
<% end %>


