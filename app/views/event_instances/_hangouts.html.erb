<% @event_instances.each_with_index do |event, index| %>
  <% present event do |hangout| %>
    <div class="col-sm-12 col-md-6 col-lg-4 mt-4">
      <div class="card">
        <div class="box ">
          <% if watchable? hangout %>
          <div class="embed-responsive embed-responsive-16by9">

            <iframe class="embed-responsive-item"
                    src="https://www.youtube.com/embed/<%=hangout.yt_video_id%>?rel=0&amp;showinfo=0"
                    >
            </iframe>
          </div>
          <% else %>
            <img src="screenshot.png" alt="">
          <% end %>
          <div class="card-block">
            <h4 class="card-title"><%= hangout.event_link %></h4>
            <div class="meta">
              <%= render partial: 'index_basic_info', locals: { hangout: hangout, index: index}  %>
            </div>
            <div id="<%= "collapse#{index}" %>" class="card-footer collapse">
              <%= render partial: 'index_extra_info', locals: { hangout: hangout }  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>


