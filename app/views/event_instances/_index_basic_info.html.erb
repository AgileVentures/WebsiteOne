<div class='row' data-event-instance-id=<%=hangout.id%>>
  <div class="col-sm-6 hg-avatar">
    <%= render 'users/user_avatar', user: hangout.host %>
  </div>
  <div class="col-sm-6">
    <% if watchable? hangout %>
      <div> <%= link_to 'Join', hangout.hangout_url,
        { class: "btn-hg-join #{hangout.live? ? '' : 'disable'}" } %>
      </div>
      <div><%= link_to 'Watch', hangout.video_url, { class: 'btn-hg-watch' } %></div>
    <% end %>
  </div>
</div>
