{
  "name": "WebsiteOne",
  "description": "A website for AgileVentures",
  "scripts":{
    "postdeploy": "rake db:setup"
  },
  "env": {
    "AGILE_BOT_URL": {
      "required": true
    },
    "AIRBRAKE_API_KEY": {
      "required": true
    },
    "AIRBRAKE_PROJECT_ID": {
      "required": true
    },
    "BUILDPACK_URL": {
      "required": true
    },
    "ENABLE_NOTIFICATIONS": {
      "required": true
    },
    "GITHUB_KEY": {
      "required": true
    },
    "GITHUB_SECRET": {
      "required": true
    },
    "GPLUS_KEY": {
      "required": true
    },
    "GPLUS_SECRET": {
      "required": true
    },
    "HANGOUTS_APP_ID": {
      "required": true
    },
    "MAX_THREADS": {
      "required": true
    },
    "PUMA_WORKERS": {
      "required": true
    },
    "SENDGRID_PASSWORD": {
      "required": true
    },
    "SENDGRID_USERNAME": {
      "required": true
    },
    "SLACK_AUTH_TOKEN": {
      "required": true
    },
    "SLACK_NOTIFICATIONS_ENABLED": {
      "required": true
    },
    "SSL_HOST": {
      "required": true
    },
    "TWITTER_NOTIFICATIONS_ENABLED": {
      "required": true
    }
  },
  "addons": [
    "sendgrid",
    "heroku-postgresql",
    "airbrake"
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "Free"
    }
  },
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-ruby"
    }
  ]
}
