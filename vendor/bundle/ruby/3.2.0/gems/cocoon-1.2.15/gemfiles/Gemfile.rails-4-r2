source "http://rubygems.org"


group :development, :test do
  gem "rails", "~> 4.0.2"
  gem "sqlite3", "1.3.8"
  gem "json_pure"
  gem "jeweler", "~> 1.8"
  gem "rspec-rails", "~> 3.0.0"
  gem "rspec",       "~> 3.0.0"
  gem "actionpack",  "~> 4.0.2"
  gem "simplecov", :require => false
  gem "rake", "~> 10.1"

  gem 'nokogiri'

  gem "generator_spec"

  platforms :rbx do
    gem 'rubysl'
    gem 'rubysl-test-unit'
    gem 'psych'
    gem 'racc'
    gem 'rubinius-developer_tools'
  end

end
